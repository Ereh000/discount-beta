<!-- extensions/product-bundle/blocks/product-bundle.liquid -->

<!-- Empty placeholder - DOM will be created dynamically after data loads -->
<div id="pb-placeholder"></div>

{% schema %}
{
  "name": "Product Bundle",
  "target": "section",
  "stylesheet": "main.css",
  "javascript": "product-bundle.js",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently bought together"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products",
      "limit": 5
    },
    {
      "type": "text",
      "id": "bundle_price",
      "label": "Bundle Price",
      "info": "Enter the discounted price for the bundle"
    },
    {
      "type": "text",
      "id": "bundle_compare_price",
      "label": "Bundle Compare Price",
      "info": "Enter the original total price for comparison"
    },
    {
      "type": "text",
      "id": "discount_text",
      "label": "Discount Text",
      "default": "Unlock Your Discount"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Claim Offer"
    }
  ]
}
{% endschema %}
