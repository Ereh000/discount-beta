        style.textContent = `
          .blinking {
            animation: blink-animation 1s steps(5, start) infinite;
          }
          @keyframes blink-animation {
            to {
              visibility: hidden;
            }
          }
        `;
        document.head.appendChild(style);
      }

      // Apply highlight style
      if (settings.highlight.style) {
        if (settings.highlight.style === 'solid') {
          discountBadge.style.opacity = '1';
        } else if (settings.highlight.style === 'transparent') {
          discountBadge.style.opacity = '0.8';
        }
      }

      // Setup timer if timer option is selected
      if (settings.highlight.option === 'timer' && settings.highlight.timerEndDate) {
        setupCountdownTimer(
          settings.highlight.timerEndDate,
          settings.highlight.timerFormat,
          settings.highlight.timerTitle
        );
      }
    }
  }

  // Function to setup countdown timer
  function setupCountdownTimer(endDateStr, format, timerTitle) {
    const discountBadge = document.querySelector('.bundle-discount-badge');
    if (!discountBadge) return;

    const endDate = new Date(endDateStr);

    // Create timer elements
    discountBadge.innerHTML = `
      <div class="timer-container">
        <span class="timer-title">${timerTitle || 'Offer ends in'}</span>
        <span class="timer-countdown">Loading...</span>
      </div>
    `;

    const countdownElement = discountBadge.querySelector('.timer-countdown');

    // Update timer function
    function updateTimer() {
      const now = new Date();
      const diff = endDate - now;

      if (diff <= 0) {
        countdownElement.textContent = 'Offer expired';
        return;
      }

      // Calculate time components
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);

      // Format based on the specified format
      let formattedTime = format || 'dd:hh:mm:ss';
      formattedTime = formattedTime.replace('dd', days.toString().padStart(2, '0'));
      formattedTime = formattedTime.replace('hh', hours.toString().padStart(2, '0'));
      formattedTime = formattedTime.replace('mm', minutes.toString().padStart(2, '0'));
      formattedTime = formattedTime.replace('ss', seconds.toString().padStart(2, '0'));

      countdownElement.textContent = formattedTime;
    }

    // Initial update
    updateTimer();

    // Update every second
    setInterval(updateTimer, 1000);
  }

