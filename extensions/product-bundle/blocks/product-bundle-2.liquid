      document.querySelectorAll('.bundle-plus-icon').forEach((icon) => {
        icon.style.fontWeight = settings.iconStyle.includes('5') ? 'bold' : 'normal';
        icon.style.fontSize = settings.iconStyle.includes('5') ? '24px' : '18px';
      });
    }

    // Apply highlight effects
    if (settings.highlight && discountBadge) {
      // Apply blinking effect if enabled
      if (settings.highlight.isBlinking) {
        discountBadge.classList.add('blinking');
        // Add a CSS animation for blinking
