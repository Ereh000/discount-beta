        addToCartButton.style.borderRadius = settings.shapes.addToCart === 'Rounded' ? '8px' : '0px';
      }
    }

    // Apply product image size
    if (settings.productImageSize) {
      document.querySelectorAll('.product-image img').forEach((img) => {
        img.style.width = `${settings.productImageSize}px`;
        img.style.height = `${settings.productImageSize}px`;
      });
    }

    // Apply icon style for the plus sign
